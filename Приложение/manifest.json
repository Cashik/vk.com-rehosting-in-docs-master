{
    "manifest_version": 2,
    "name": "Отправить в ВК",
    "version": "1.0.3",
    // действия, при нажатии на иконку расширения
    "browser_action": {
        "default_popup": "popup.html"
    },
    // скрипт, который выполняется в фоновом режиме
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "description": "Отправить в ВК",
    "icons": {
        "128": "images/imageinfo-128.png",
        "16": "images/imageinfo-16.png",
        "48": "images/imageinfo-48.png"
    },
    // права доступа для расширения
    "permissions": ["contextMenus", "tabs", "storage", "https://*/*"]
}



